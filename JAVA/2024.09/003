/*
3. 정수 number와 n, m이 주어집니다. number가 n의 배수이면서 m의 배수이면 1을 아니라면 0을 return하도록 solution 함수를 완성해주세요.
*/

class Solution {
    public int solution(int number, int n, int m) {
        int answer = 0;

        if(number%n==0&&number%m==0){
            System.out.println(answer=1);
        }else{
            System.out.println(answer=0);
        }return answer;
    }
}



/*
다른 풀이)

class Solution {
    public int solution(int number, int n, int m) {
        return number % n == 0 && number % m == 0 ? 1 : 0; //삼항연산자로 한줄로 정리가능!
    }
}

*/
